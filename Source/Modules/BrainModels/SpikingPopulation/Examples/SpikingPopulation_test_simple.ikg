<?xml version="1.0"?>

<group title="SpikingPopulation Example" vThreshold="20" vPopSize="4" >
	
		<module
			class = "Constant"
			name = "MyConstant"
			outputsize  = "2"
			data  = "0.0 0.0"
		/>
		<module
		  class       =   "FunctionGenerator"
		  name        =   "SquareGen"
		  type        =   "ticksquare"
          tickduty   = "600"
          basetime = "500"
		  offset      =   "0.0"
		  amplitude   =   "5"
		  shift       =   "0.0"
		/>

		<module
			class="SpikingPopulation"
			name="SensorNeuron"
			model_type = "Izhikevich"
			neuron_type = "regular_spiking"
			population_size = "@vPopSize"
			substeps = "2"
			threshold = "@vThreshold"
			debug = "false"
		/>
        <module
			class="SpikingPopulation"
			name="HiddenNeuron"
			model_type = "Izhikevich"
			neuron_type = "regular_spiking"
			population_size = "@vPopSize"
			substeps = "2"
			threshold = "@vThreshold"
			debug = "true"
		/>
			<module
            class = "PopulationCoder"
            name = "PopulationCoder"
            size = "@vPopSize"
            min = "-2"
            max = "7"
        />
		<module
			class = "Scale"
			name = "Scale"
			_factor = "5"
		/>
		
        <connection  source = "MyConstant.OUTPUT"  target = "SensorNeuron.EXCITATION" />
		<connection  source = "MyConstant.OUTPUT"  target = "SensorNeuron.INHIBITION" />
        <connection  source = "MyConstant.OUTPUT"  target = "HiddenNeuron.INHIBITION" />
        <connection  source = "MyConstant.OUTPUT"  target = "HiddenNeuron.DIRECT_IN" />
		
		  
		<connection  source = "SquareGen.OUTPUT"  target = "PopulationCoder.INPUT" />
        <connection  source = "PopulationCoder.OUTPUT"  target = "Scale.INPUT" />
		<connection  source = "Scale.OUTPUT"  target = "SensorNeuron.DIRECT_IN" />
		
        <connection  source = "SensorNeuron.OUTPUT"  target = "HiddenNeuron.EXCITATION" />

		<view name="View">
			<slider-horizontal
				xindex = "0"
				height = "100"
				width = "200"
				_module = "Scale"
				parameter = "Scale.factor"
				min = "0"
				class = "slider-horizontal"
				show_title = "true"
				title = "Scale"
				max = "1"
				count = "1"
				step = "0.01"
				x = "200"
				y = "0"
				show_values="true"
			/>
			<bar-graph
				show_title = "true"
				direction="horizontal"  
				source="Scale.OUTPUT" 
				x="400" y="0" width="200" height="200"
				min="-1"
				max="10"
				title="Scale output"
				show_title="true"
			/>
			<plot 
				source="SquareGen.OUTPUT" 
				x="0" y="0" width="200" height="200"
				min="0"
				max="10"
				title="Squaregen"
				show_title = "true"
			/>
			<bar-graph
				show_title = "true"
				direction="horizontal"  
				source="SensorNeuron.OUTPUT" 
				x="0" y="200" width="200" height="200"
				min="-100"
				max="100"
				title="Sensor neuron"
			/>
			<bar-graph
				direction="horizontal"  
				source="HiddenNeuron.OUTPUT" 
				x="0" y="400" width="200" height="200"
				min="-100"
				max="100"
				title="Hidden neuron"
				show_title = "true"
			/>
			
			

			<plot
				  
				source="SensorNeuron.OUTPUT" 
				x="200" y="200" width="200" height="200"
				min="-100"
				max="100"
				title="Sensor neuron"
				show_title = "true"
			/>
			<plot
				  
				source="HiddenNeuron.OUTPUT" 
				x="200" y="400" width="200" height="200"
				min="-100"
				max="100"
				title="Hidden"
				show_title = "true"
			/>
			
		</view>

</group>
 
